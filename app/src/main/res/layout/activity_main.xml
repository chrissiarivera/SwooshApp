<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/welcome_screen_bg"
    tools:context="jalanechrissia.rivera.com.swoosh.MainActivity"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/swoosh_logo"
        android:padding="40dp"/>

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textView1"
        android:textSize="60sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_weight="0"
        android:textColor="@color/standardTextColor"/>

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textView2"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/standardTextColor"
        android:layout_weight="0"
        android:gravity="center"/>

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="@color/standardTextColor"
        android:text="@string/textView4"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_weight="0.80" />


    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:alpha=".5"
        android:text="@string/welcomePageBtnTxt"
        android:textSize="17sp"
        android:textColor="@color/standardTextColor"
        android:textStyle="bold"
        android:onClick="onClick"/>

</LinearLayout>
