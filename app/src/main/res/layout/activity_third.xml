<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beginner_baller_bg"
    tools:context="jalanechrissia.rivera.com.swoosh.ThirdActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/swoosh_logo"
        android:padding="40dp"/>

    <TextView
        android:id="@+id/TVthirdActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I am a: "
        android:textColor="@color/standardTextColor"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/beginner"
        android:layout_height="60dp"
        android:layout_width="160dp"
        android:alpha=".5"
        android:background="@drawable/button"
        android:text="Beginner"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="@color/standardTextColor"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@+id/baller"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/baller" />

    <Button
        android:id="@+id/baller"
        android:layout_height="60dp"
        android:layout_width="160dp"
        android:alpha=".5"
        android:background="@drawable/button"
        android:text="Baller"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="@color/standardTextColor"
        android:textStyle="bold"
        android:layout_marginTop="47dp"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/finish"
        android:layout_height="@dimen/btn_height"
        android:layout_width="@dimen/btn_width"
        android:alpha=".5"
        android:background="@drawable/button"
        android:text="Finish"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="@color/standardTextColor"
        android:textStyle="bold"
        android:layout_marginBottom="47dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
